# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
# (Don't specify an indent_size here; that has too many unintended consequences.)

[justfile]
indent_size = 4

[*.go]
indent_size = 2
indent_style = tab

[*.{json,md,sh,toml,yml,yaml}]
indent_size = 2

[.{gitignore,gitattributes}]
indent_style = tab
indent_size = 4
